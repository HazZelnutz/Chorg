<UserControl x:Class="Chorg.Views.AirportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:cal="clr-namespace:Caliburn.Micro;assembly=Caliburn.Micro.Platform"
             xmlns:local="clr-namespace:Chorg.Views"
             x:Name="MainControl">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ICAO -->
        <TextBlock Grid.Row="0" x:Name="ICAO" FontSize="12pt" TextTrimming="CharacterEllipsis"/>
        
        <!-- Name -->
        <TextBlock Grid.Row="1" x:Name="AirportName" FontSize="9pt" FontStyle="Italic" TextTrimming="CharacterEllipsis"/>

    </Grid>
</UserControl>
